{
  "name": "combohtml",
  "description": "Combo your HTML files, make scripts(.js) and stylesheets(.css) inline.",
  "version": "1.2.0",
  "engines": {
    "node": ">=4"
  },
  "main": "dist/core.js",
  "module": "dist/core.esm.js",
  "bin": {
    "combohtml": "dist/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:mingelz/combohtml.git"
  },
  "author": {
    "name": "mingelz",
    "email": "mingelz@gmail.com"
  },
  "license": "MIT",
  "keywords": [
    "combo",
    "mutiple",
    "cli",
    "inline",
    "source",
    "inline-source",
    "inliner"
  ],
  "scripts": {
    "clean": "rimraf dist/*",
    "lint": "eslint --fix --report-unused-disable-directives src test",
    "test": "mocha",
    "cover": "isparta cover --report text --report lcov _mocha -- --reporter dot",
    "compile": "rollup -c",
    "build": "NODE_ENV=production npm run lint && npm run compile",
    "pretest": "npm run build",
    "posttest": "npm run cover",
    "prebuild": "npm run clean -s",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.2",
    "clean-css": "^4.1.9",
    "commander": "^2.12.2",
    "glob": "^7.1.2",
    "html-minifier": "^3.5.7",
    "mkdirp": "^0.5.1",
    "request": "^2.83.0",
    "uglify-js": "^3.2.1"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "eslint": "^4.12.1",
    "eslint-config-mingelz": "^1.1.0",
    "isparta": "^4.0.0",
    "mocha": "^4.0.1",
    "rimraf": "^2.6.2",
    "rollup": "^0.52.0",
    "rollup-plugin-buble": "^0.18.0"
  },
  "files": [
    "dist"
  ]
}
